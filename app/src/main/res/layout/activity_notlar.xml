<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UzakNotlarActivity">

    <EditText
        android:id="@+id/baslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/edittext_background"
        android:gravity="start|top"
        android:hint="Başlık yazın"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintBottom_toTopOf="@+id/icerik"
        app:layout_constraintEnd_toEndOf="@+id/icerik"
        app:layout_constraintStart_toStartOf="@+id/icerik"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/icerik"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/edittext_background"
        android:gravity="start|top"
        android:hint="İçerik yazın"
        android:inputType="textMultiLine"
        android:maxLines="1000000000"
        android:minLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/beni_unut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="Beni unut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>